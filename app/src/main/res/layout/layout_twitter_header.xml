<?xml version="1.0" encoding="utf-8"?>
<com.cui.video.widget.listheaderfooter.TwitterRefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                    xmlns:tools="http://schemas.android.com/tools"
                                                                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:background="@drawable/twitter_pull_arrow"/>

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:background="@drawable/qq_refresh_success"/>

        <com.cui.video.widget.ProgressWheel
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/tvRefresh"
            tools:ignore="RtlHardcoded"
            wheel:matProg_barColor="@color/progress_color"
            wheel:matProg_barWidth="3dp"
            wheel:matProg_circleRadius="30dp"
            wheel:matProg_progressIndeterminate="true"/>

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/cui_text_color"/>
    </RelativeLayout>
</com.cui.video.widget.listheaderfooter.TwitterRefreshHeaderView>