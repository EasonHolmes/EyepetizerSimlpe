<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke
                android:width="1px"
                android:color="@color/white"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->


    <!-- 此处定义只有上下两边有边框 高度为1像素-->
    <item
        android:bottom="1px"
        android:top="1px">
        <!--边框里面背景颜色 白色-->
        <shape>
            <stroke
                android:width="1px"
                android:color="@color/white"/>
        </shape>
    </item>
</layer-list>